<%= form_for([comment.article, comment]) do |f| %>
    <%= f.text_field :parent_id, class: 'form-control', style:'display:none' %>
    <div class="row">
      <div class="col-sm-6 form-group">
        <%= f.label :commenter %><br>
        <%= f.text_field :commenter, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 form-group">
        <%= f.label :body %><br>
        <%= f.text_area :body, class: 'form-control' %>
      </div>
    </div>
    <div class="display-flex end col-sm-6">
      <%= f.submit 'Save', class:'btn btn-primary custom-button' %>
    </div>
<% end %>
