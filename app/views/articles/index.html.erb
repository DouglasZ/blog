<div class="container">
  <div class="page-header">
    <div class="container-fluid">
      <h1>Listing Articles</h1>
    </div>
  </div>

  <div class="display-flex end">
    <%= link_to 'New article', new_article_path, class:'btn btn-primary' %>
  </div>

  <div class="table-height">
    <table class="table table-striped table-bordered" cellspacing="0" width="100%" style="margin-top: 10px;">
      <thead>
      <tr>
        <th width="35%">Title</th>
        <th width="55%">Text</th>
        <th style="text-align: center;">Options</th>
      </tr>
      </thead>

      <tbody>
      <% @articles.each do |article| %>
          <tr>
            <td>
              <%= link_to article_path(article) do %>
                  <%= article.title %>
              <% end %>
            </td>
            <td>
              <%= link_to article_path(article) do %>
                  <%= article.text %>
              <% end %>
            </td>
            <td align="center">
              <%= link_to edit_article_path(article), class:'btn btn-default' do %>
                  <span class="glyphicon glyphicon-pencil"></span>
              <% end %>
              <%= link_to article_path(article), class:'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <span class="glyphicon glyphicon-trash"></span>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="display-flex center">
    <%= paginate @articles %>
  </div>

</div>